<%- include('header') -%>
<div class="center-div" id="login">
  <div class="container w-25 border py-5 bg-white rounded-2">
    <div class="title pb-5 text-center">
      <h2 class="font-weight-bold">Login System</h2>
      <span>Log in for the existing user</span>
      <% if(locals.logout) { %>
      <div class="alert alert-success text-center"><%= logout %></div>
      <% } %>
    </div>
    <form
      action="/route/login"
      method="POST"
      style="
        display: flex;
        justify-content: center;
        flex-direction: column;
        gap: 10px;
      "
    >
      <div class="form-group">
        <input
          type="email"
          class="form-control"
          placeholder="email"
          name="email"
        />
        <small class="form-text text-muted text-left"
          >Register email address</small
        >
      </div>
      <div class="form-group">
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="password"
        />
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
<%- include('footer') -%>
